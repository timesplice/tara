<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/comments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_container"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/comments_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Comments"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/comments_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/comments_heading"
            android:layout_marginBottom="10dp"
            android:background="@color/dull_background" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comments_separator" />
    </RelativeLayout>

</RelativeLayout>